       <%- include('./partials/header') %>
<div class="w-full h-screen flex items-start bg-gray-50">
  
    <div class="w-[25%] flex h-screen flex-col bg-white shadow-md px-6 py-8">
       
        <div class="flex items-center gap-4 mb-6">
            <h3 class="text-lg font-semibold text-gray-700">Sort by:</h3>
            <form action="/shop" class="relative">
                <select
                    class="border border-gray-300 rounded-lg px-3 py-2 bg-white shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-150 ease-in-out"
                    name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>

        
        <div class="flex flex-col mt-10">
            <h4 class="text-lg font-semibold text-gray-700 mb-4">Collections</h4>
            <a class="text-gray-600 hover:text-blue-500 transition mb-2" href="">New Collection</a>
            <a class="text-gray-600 hover:text-blue-500 transition mb-2" href="">All Products</a>
            <a class="text-gray-600 hover:text-blue-500 transition mb-2" href="">Discounted Products</a>
        </div>

    
        <div class="mt-20">
            <h4 class="text-lg font-semibold text-gray-700 mb-4">Filter By:</h4>
            <a class="text-gray-600 hover:text-blue-500 transition mb-2 block" href="">Availability</a>
            <a class="text-gray-600 hover:text-blue-500 transition mb-2 block" href="">Discount</a>
        </div>
    </div>

   
    <div class="w-[75%] flex flex-col gap-8 px-8 py-8 overflow-y-auto bg-gray-100">
     
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <% products.forEach(function(product){ %>
                <div class="w-full bg-white rounded-lg shadow-lg hover:shadow-xl transition duration-300 ease-in-out overflow-hidden">
                   
                    <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>] hover:scale-105 transition duration-300 ease-in-out">
                        <img class="h-[12rem] object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                    </div>

                  
                    <div class="flex justify-between items-center bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>] px-4 py-4">
                        <div>
                            <h6 class="text-lg  capitalize"><%= product.name %></h6>
                            <h6 class="text-lg font-medium">₹ <%= product.price %></h6>
                        </div>
                        <a class="w-10 h-10 flex items-center justify-center rounded-full bg-gradient-to-r from-blue-500 to-blue-600 text-white shadow-lg hover:shadow-xl hover:from-blue-600 hover:to-blue-700 transition duration-300 ease-in-out transform hover:scale-105"
                        href="">
                        <i class="ri-add-line text-xl"></i>
                    </a>
                    
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>
